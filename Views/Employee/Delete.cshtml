@model  EmployeeCRUD.Models.EmployeeAccount


@{
    Layout = null;
}

<h2>Delete</h2>

@using (Html.BeginForm("Delete", "Employee", FormMethod.Post, new { id = "popupForm" }))
{
    @Html.HiddenFor(a => a.employeeID)
    <div class="form-group">
        <label>First Name</label>
        <p>@Model.employeeFirstName</p>
    </div>

    <div class="form-group">
        <label>Last Name</label>
        <p>@Model.employeeLastName</p>
    </div>

    <div class="form-group">
        <label>Position</label>
        <p>@Model.employeePosition</p>
    </div>

    <div class="form-group">
        <label>Office</label>
        <p>@Model.employeeOffice</p>
    </div>

    <div class="form-group">
        <label>Salary</label>
        <p>@Model.employeeSalary</p>
    </div>

    <div>
        <input type="submit" value="Delete" />
    </div>
}